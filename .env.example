# PostgreSQL Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ddip
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-256-bits-required-for-hs512-algorithm
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_ISSUER=ddip-platform

# Kakao API Configuration
KAKAO_API_USER_INFO_URL=https://kapi.kakao.com/v2/user/me
KAKAO_API_TIMEOUT=5000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Server Configuration
SERVER_PORT=8080

# JPA/Hibernate Configuration
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_FORMAT_SQL=true
SPRING_JPA_DDL_AUTO=update
